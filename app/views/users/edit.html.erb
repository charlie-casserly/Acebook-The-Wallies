  <h1>Update Profile</h1>
  <%= form_for @user do |f| %>
    <%= f.label :bio %> <br />
    <%= f.text_field :bio %> <br />
    <%= f.label :age %> <br />
    <%= f.text_field :age %> <br />
    <%= f.label :home_town %> <br />
    <%= f.text_field :home_town %> <br />
    <%= f.label :education %> <br />
    <%= f.text_field :education %> <br />
    <%= f.label :workplace %> <br />
    <%= f.text_field :workplace %> <br />
    <%= f.label :relationship_status %> <br />
    <%= f.select :relationship_status, ["", "Single", "In a relationship" ,"It's complicated"] %> <br />

    <%= f.submit "Save changes" %>
  <% end %>