  <h1>Update Profile</h1>
  <%= form_for @user do |f| %>
    <%= f.label :bio %> <br />
    <%= f.text_field :bio %> <br />
    <%= f.label :age %> <br />
    <%= f.text_field :age %> <br />
    <%= f.label :home_town %> <br />
    <%= f.text_field :home_town %> <br />
    <%= f.label :education %> <br />
    <%= f.text_field :education %> <br />
    <%= f.label :workplace %> <br />
    <%= f.text_field :workplace %> <br />

    <%= f.submit %>
  <% end %>